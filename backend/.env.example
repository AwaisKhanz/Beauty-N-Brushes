# ============================================
# PAYMENT CONFIGURATION
# ============================================

# Payment Mode: 'test' or 'live'
PAYMENT_MODE=test

# ============================================
# STRIPE CONFIGURATION
# ============================================

# Test Mode Keys
STRIPE_TEST_SECRET_KEY=sk_test_your_test_key_here
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_your_test_key_here
STRIPE_TEST_WEBHOOK_SECRET=whsec_test_your_webhook_secret_here

# Live Mode Keys
STRIPE_LIVE_SECRET_KEY=sk_live_your_live_key_here
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_your_live_key_here
STRIPE_LIVE_WEBHOOK_SECRET=whsec_live_your_webhook_secret_here

# Stripe Price IDs (Test)
STRIPE_TEST_SOLO_PRICE_ID=price_test_solo_monthly
STRIPE_TEST_SALON_PRICE_ID=price_test_salon_monthly

# Stripe Price IDs (Live)
STRIPE_LIVE_SOLO_PRICE_ID=price_live_solo_monthly
STRIPE_LIVE_SALON_PRICE_ID=price_live_salon_monthly

# ============================================
# PAYSTACK CONFIGURATION
# ============================================

# Test Mode Keys
PAYSTACK_TEST_SECRET_KEY=sk_test_your_test_key_here
PAYSTACK_TEST_PUBLIC_KEY=pk_test_your_test_key_here

# Live Mode Keys
PAYSTACK_LIVE_SECRET_KEY=sk_live_your_live_key_here
PAYSTACK_LIVE_PUBLIC_KEY=pk_live_your_live_key_here

# Paystack Plan Codes (Pre-created in dashboard)
PAYSTACK_SOLO_GHS_PLAN=bnb_solo_ghs
PAYSTACK_SALON_GHS_PLAN=bnb_salon_ghs
PAYSTACK_SOLO_NGN_PLAN=bnb_solo_ngn
PAYSTACK_SALON_NGN_PLAN=bnb_salon_ngn

# ============================================
# FRONTEND URL
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/bnb_db

# ============================================
# Email Configuration
EMAIL_FROM=noreply@beautynbrushes.com
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Cron Jobs Configuration
ENABLE_CRON_JOBS=true
CRON_TIMEZONE=UTC

# Booking Reminders
BOOKING_REMINDER_24H_ENABLED=true
BOOKING_REMINDER_1H_ENABLED=true
NO_SHOW_GRACE_PERIOD_MINUTES=30

# Subscription Management
SUBSCRIPTION_WARNING_DAYS=7,3,1
AUTO_DISABLE_EXPIRED=true

# Analytics
ENABLE_ANALYTICS_JOBS=true
TRENDING_MIN_VIEWS=100
TRENDING_MIN_BOOKINGS=10

# Data Cleanup
NOTIFICATION_RETENTION_DAYS=90
BOOKING_ARCHIVE_MONTHS=12
SESSION_RETENTION_DAYS=30

# ============================================
# AWS S3
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=bnb-uploads

# ============================================
# JWT
# ============================================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=7d

# ============================================
# AI (OpenAI)
# ============================================
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# GOOGLE CLOUD
# ============================================
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# ============================================
# SOCKET.IO
# ============================================
# CORS origin for Socket.IO connections (comma-separated for multiple origins)
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# Redis URL for Socket.IO adapter (optional but recommended for scalability)
# Leave empty to use default in-memory adapter
REDIS_URL=redis://localhost:6379

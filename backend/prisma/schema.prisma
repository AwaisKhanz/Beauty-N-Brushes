// Subscription Configuration (Singleton)
// Stores global trial configuration that applies to all new provider signups
model SubscriptionConfig {
  id                String   @id @default("default") // Singleton pattern - only one record
  trialEnabled      Boolean  @default(true) // Whether trials are enabled globally
  trialDurationDays Int      @default(60) // Number of days for trial period
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("subscription_config")
}

// Platform Configuration
// Stores configurable platform settings (service fees, etc.)
model PlatformConfig {
  id          String   @id @default(cuid())
  key         String   @unique // e.g., "SERVICE_FEE_BASE", "SERVICE_FEE_PERCENTAGE"
  value       String // Store as string, parse as needed
  dataType    String // "number", "boolean", "string"
  category    String // "payment", "booking", "general"
  description String?
  updatedBy   String? // userId of admin who last updated
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([key])
  @@map("platform_config")
}

